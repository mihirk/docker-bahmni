{
    "builders": [
        {
            "type": "docker",
            "image": "centos:centos6",
            "export_path": "bahmni-openmrs.tar"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "provisioning/install_ansible.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "provisioning/bahmni-openmrs/local.yml",
            "inventory_file": "provisioning/bahmni-openmrs/ansible_hosts",
            "role_paths": ["provisioning/bahmni-openmrs/roles/yum-packages"],
            "extra_arguments": ["-vvv"]

        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-import",
                "repository": "mihirk/bahmni",
                "tag": "openmrs"
            },
            {
                "type": "docker-push",
                "login": "true",
                "login_email": "mihir.khatwani@gmail.com",
                "login_username": "mihirk",
                "login_password": "some"
            }
        ]
    ]

}
